{
  "extends": "airbnb-base",
  "plugins": [
    "es6-recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "settings": {
  },
  "env": {
    "node": true,
    "browser": true,
    "es6": true,
    "mocha": true
  },
  "rules": {
    "no-underscore-dangle":"off",
    "no-trailing-spaces":"warn",
    "no-unused-vars":"warn",
    "no-useless-escape":"warn",
    "camelcase": [2, {
      "properties": "never"
    }],
    "max-len": ["warn", 160],
    "indent": ["warn", 2],
    "linebreak-style": 0,
    "space-before-function-paren": [2, {
      "anonymous": "always",
      "named": "never"
    }],
    "no-use-before-define": [2, "nofunc"]
  }
}
